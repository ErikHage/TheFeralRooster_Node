<!DOCTYPE html>
<html>
<head>
    <% include partials/headerCommon %>

    <title><%= title %></title>
</head>
<body>

    <!-- Header + Navbar -->
    <% include partials/pageHeader.ejs %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">

                <div class="hobbies-item">
                    <h4>Brewing</h4>

                </div>

                <div class="hobbies-item">
                    <h4>Coding</h4>
                </div>

                <div class="hobbies-item">
                    <h4>Gardening</h4>
                </div>

                <div class="hobbies-item">
                    <h4>Carpentry</h4>
                </div>

                <div class="hobbies-item">
                    <h4>Obstacle Racing</h4>

                    <div id="raceCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <% for(i=0; i<racePics.length; i++) { %>
                                <div class="item <% if(i=0) { %> 'active' <%}%>">
                                    <img src="<%= 'images/hobbies/' + racePics[i] %>">
                                </div>
                            <% } %>
                        </div>

                        <a class="left carousel-control" href="#raceCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#raceCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>

</body>
<footer>
    <% include partials/footer %>
</footer>
</html>
